{
	"kind": "singleType",
	"collectionName": "options",
	"info": {
		"singularName": "option",
		"pluralName": "options",
		"displayName": "Website Options",
		"description": ""
	},
	"options": {
		"draftAndPublish": false
	},
	"pluginOptions": {},
	"attributes": {
		"siteName": {
			"type": "string",
			"required": true,
			"maxLength": 20
		},
		"locale": {
			"type": "string",
			"default": "eb_GB"
		},
		"tagLine": {
			"type": "string",
			"required": true
		},
		"logo": {
			"type": "media",
			"multiple": false,
			"required": false,
			"allowedTypes": ["images"]
		},
		"email": {
			"type": "email"
		},
		"address": {
			"type": "text"
		},
		"telephone": {
			"type": "string"
		},
		"linkedinURL": {
			"type": "string",
			"regex": "https?:\\/\\/(www\\.)?[-a-zA-Z0-9@:%._\\+~#=]{1,256}\\.[a-zA-Z0-9()]{1,6}\\b([-a-zA-Z0-9()@:%_\\+.~#?&//=]*)"
		},
		"xURL": {
			"type": "string",
			"regex": "https?:\\/\\/(www\\.)?[-a-zA-Z0-9@:%._\\+~#=]{1,256}\\.[a-zA-Z0-9()]{1,6}\\b([-a-zA-Z0-9()@:%_\\+.~#?&//=]*)"
		},
		"facebookURL": {
			"type": "string",
			"regex": "https?:\\/\\/(www\\.)?[-a-zA-Z0-9@:%._\\+~#=]{1,256}\\.[a-zA-Z0-9()]{1,6}\\b([-a-zA-Z0-9()@:%_\\+.~#?&//=]*)"
		},
		"instagramURL": {
			"type": "string",
			"regex": "https?:\\/\\/(www\\.)?[-a-zA-Z0-9@:%._\\+~#=]{1,256}\\.[a-zA-Z0-9()]{1,6}\\b([-a-zA-Z0-9()@:%_\\+.~#?&//=]*)"
		},
		"youtubeURL": {
			"type": "string",
			"regex": "https?:\\/\\/(www\\.)?[-a-zA-Z0-9@:%._\\+~#=]{1,256}\\.[a-zA-Z0-9()]{1,6}\\b([-a-zA-Z0-9()@:%_\\+.~#?&//=]*)"
		},
		"tiktokURL": {
			"type": "string",
			"regex": "https?:\\/\\/(www\\.)?[-a-zA-Z0-9@:%._\\+~#=]{1,256}\\.[a-zA-Z0-9()]{1,6}\\b([-a-zA-Z0-9()@:%_\\+.~#?&//=]*)"
		},
		"meta": {
			"type": "component",
			"repeatable": false,
			"component": "shared.meta"
		},
		"seo": {
			"type": "component",
			"repeatable": false,
			"component": "shared.seo"
		},
		"codeInjection": {
			"type": "component",
			"repeatable": false,
			"component": "shared.code-injection"
		},
		"robotstTxt": {
			"type": "text"
		},
		"footerTitle": {
			"type": "string"
		},
		"footerSubText": {
			"type": "string"
		}
	}
}
